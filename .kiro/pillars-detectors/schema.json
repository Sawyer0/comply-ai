{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/mapper_canonical_event.schema.json",
  "title": "MapperCanonicalEvent",
  "description": "Canonical Mapper output for a single detector event, normalized into the product taxonomy.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "taxonomy",
    "scores",
    "confidence"
  ],
  "properties": {
    "taxonomy": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "Canonical taxonomy label (e.g., 'PII.Identifier.SSN').",
        "pattern": "^[A-Z][A-Z0-9_]*(\\.[A-Za-z0-9_]+)*$"
      }
    },
    "scores": {
      "type": "object",
      "description": "Map of canonical taxonomy labels to normalized scores in [0,1].",
      "additionalProperties": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Model-calibrated confidence in the mapping (0..1)."
    },
    "notes": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional short machine note about mapping choices (for debugging)."
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "vendor": {
          "type": "string"
        },
        "detector": {
          "type": "string"
        },
        "detector_version": {
          "type": "string"
        },
        "raw_ref": {
          "type": "string",
          "description": "Pointer/ID to the raw event in Splunk/Datadog/S3."
        },
        "route": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "tenant_id": {
          "type": "string"
        },
        "ts": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "policy_context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "expected_detectors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "environment": {
          "type": "string",
          "enum": [
            "dev",
            "stage",
            "prod"
          ]
        }
      }
    }
  }
}