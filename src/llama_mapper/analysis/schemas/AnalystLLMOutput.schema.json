{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analysis Response Schema",
  "description": "Schema for analysis module LLM output responses",
  "type": "object",
  "required": [
    "reason",
    "remediation",
    "opa_diff",
    "confidence",
    "confidence_cutoff_used",
    "evidence_refs",
    "notes"
  ],
  "properties": {
    "reason": {
      "type": "string",
      "maxLength": 120,
      "description": "Concise explanation of the analysis (max 120 characters)"
    },
    "remediation": {
      "type": "string",
      "maxLength": 120,
      "description": "Suggested remediation action (max 120 characters)"
    },
    "opa_diff": {
      "type": "string",
      "description": "OPA/Rego policy diff for remediation"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence score for the analysis"
    },
    "confidence_cutoff_used": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence cutoff threshold used for fallback decision"
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "References to evidence from input metrics"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or context"
    }
  },
  "additionalProperties": false
}
