{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AnalystLLMOutput",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "reason",
    "remediation",
    "confidence",
    "evidence_refs",
    "opa_diff"
  ],
  "properties": {
    "reason": {
      "type": "string",
      "maxLength": 120
    },
    "remediation": {
      "type": "string",
      "maxLength": 120
    },
    "opa_diff": {
      "type": "string",
      "description": "Rego snippet to adjust policy; empty if N/A",
      "maxLength": 2000
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "notes": {
      "type": "string",
      "maxLength": 500
    }
  }
}