{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AnalystLLMOutput",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "reason",
    "remediation",
    "confidence",
    "evidence_refs",
    "opa_diff"
  ],
  "properties": {
    "reason": {
      "type": "string",
      "maxLength": 120,
      "description": "Concise explanation of the issue (≤20 words)"
    },
    "remediation": {
      "type": "string",
      "maxLength": 120,
      "description": "Suggested remediation (≤20 words)"
    },
    "opa_diff": {
      "type": "string",
      "description": "Rego snippet to adjust policy; empty if N/A",
      "maxLength": 2000
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence score for the analysis"
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "References to source metrics used"
    },
    "notes": {
      "type": "string",
      "maxLength": 500,
      "description": "Additional notes (PII-redacted)"
    },
    "confidence_cutoff_used": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence cutoff threshold applied"
    },
    "processing_time_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Processing time in milliseconds"
    }
  }
}
